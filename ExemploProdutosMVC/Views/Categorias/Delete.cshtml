@model ExemploProdutos.Dominio.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir uma Categoria</h1>

<h3>Tem certeza que deseja excluir esta Categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Retorna a lista de Categorias</a>
    </form>
</div>
