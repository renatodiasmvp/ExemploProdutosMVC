@model ExemploProdutos.Dominio.Categoria

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes da Categoria</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    <h4>Produtos relacionados a Categoria</h4>
    <div class="row">

        <ul class="list-group">
            @foreach (var produto in Model.Produtos)
            {
                <li class="list-group-item">@produto.Nome</li>
            }
        </ul>

    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoriaId">Alterar</a> |
    <a asp-action="Index">Retorna a lista de Categorias</a>
</div>
